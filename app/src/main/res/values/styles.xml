<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#fff</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#fff200</item>
    </style>

    <style name="AppTheme.PopupStyle">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>


    <!-- Home HUB Button styles -->
    <style name="MChatButtonstyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/home_mchat_btn</item>
    </style>

    <style name="AutismInfoButtonStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/autism_info_btn</item>
    </style>

    <style name="ContactButtonStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/contact_btn</item>
    </style>


    <!-- M-CHAT Button styles -->
    <style name="YesButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/yes_btn_radio</item>
    </style>

    <style name="NoButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/no_btn_radio</item>
    </style>

    <style name="ExampleButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/example_btn</item>
    </style>

    <style name="CloseWindowStyle" parent="@android:style/Widget.ImageButton">
        <item name="android:background">@drawable/close_btn</item>
    </style>

    <style name="NextButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/next_btn</item>
    </style>

    <style name="HomeButtonStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/home_btn</item>
    </style>

    <style name="EmailButtonStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/email_btn</item>
    </style>

    <style name="HintButtonStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/scorescreen_hint_btn</item>
    </style>

    <!-- Autism Spectrum Quotient Button Styles -->

    <style name="StronglyAgreeStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name = "android:foreground">@drawable/strongly_agree_btn</item>
    </style>

    <style name="SlightlyAgreeStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name = "android:foreground">@drawable/slightly_agree_btn</item>
    </style>

    <style name="StronglyDisagreeStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name = "android:foreground">@drawable/strongly_disagree_btn</item>
    </style>

    <style name="SlightlyDisagreeStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name = "android:foreground">@drawable/slightly_disagree_btn</item>
    </style>


</resources>
