<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.PopupStyle">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="CardStyle" parent="CardView">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">140dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="contentPadding">16dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">0dp</item>

    </style>

    <style name="CardText" parent="CardView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="LogoStyle">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <!-- Home HUB Button styles -->
    <style name="MChatButtonstyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/home_mchat_btn</item>
    </style>


    <!-- M-CHAT Button styles -->
    <style name="YesButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/yes_btn_radio</item>
    </style>

    <style name="NoButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/no_btn_radio</item>
    </style>

    <style name="ExampleButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/example_btn</item>
    </style>

    <style name="CloseWindowStyle" parent="@android:style/Widget.ImageButton">
        <item name="android:background">@drawable/close_btn</item>
    </style>

    <style name="NextButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/next_btn</item>
    </style>

    <style name="HomeButtonStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/home_btn</item>
    </style>

    <style name="ContactButtonStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/contact_btn</item>
    </style>

    <style name="HintButtonStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/scorescreen_hint_btn</item>
    </style>


</resources>
