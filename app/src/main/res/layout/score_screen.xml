<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/childfamily">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e607060d" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center_horizontal"
        android:text="M-CHAT-Râ„¢"
        android:textColor="#afffffff"
        android:textSize="50sp"
        android:textStyle=""
        app:layout_constraintBottom_toTopOf="@id/score" />

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Score"
        android:textColor="#c3ffffff"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".20" />

    <Button
        android:id="@+id/home_button"
        android:background="@drawable/icon_hub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha=".8"
        app:layout_constraintVertical_bias=".35"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:onClick="homeButton"/>

    <Button
        android:background="@drawable/icon_mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha=".8"
        app:layout_constraintTop_toTopOf="@id/home_button"
        app:layout_constraintBottom_toBottomOf="@id/home_button"
        app:layout_constraintRight_toLeftOf="@id/home_button"/>

    <Button
        android:background="@drawable/icon_jigsaw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha=".8"
        app:layout_constraintTop_toTopOf="@id/home_button"
        app:layout_constraintBottom_toBottomOf="@id/home_button"
        app:layout_constraintLeft_toRightOf="@id/home_button"/>

    <TextView
        android:id="@+id/risk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:padding="15dp"
        android:text="@string/medium_risk"
        android:textColor="#c0ffffff"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_button" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:paddingHorizontal="30dp"
        android:text="@string/high_risk_description"
        android:textColor="#caffffff"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/risk" />


</android.support.constraint.ConstraintLayout>