<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/father_daughter"
    tools:context="com.example.android.quizappv2.Exam">

    <include android:id="@+id/app_bar"
        layout = "@layout/app_bar"
        />

    <View
        android:background="#b9000e1a"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="-1dp" />

    <TextView
        android:text="M-CHAT-Râ„¢"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:cardBackgroundColor="#510f1a13">
    <TextView
        android:text="@string/mchat_intro"
        android:textSize="16sp"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingHorizontal="24dp"
        android:paddingVertical="40dp"/>

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/exam_button"
        android:text="begin"
        android:fontFamily="monospace"
        android:background="#a3080e23"
        android:textSize="20sp"
        android:textColor="#fff"
        android:padding="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:onClick="startExam"/>

</RelativeLayout>
